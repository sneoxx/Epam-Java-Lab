<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Web App Zaraev</display-name>

    <servlet>
        <servlet-name>servletSupplier</servlet-name>
        <servlet-class>com.zaraev.epam.javacourses.serlvlets.ServletSupplier</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>servletCustomer</servlet-name>
        <servlet-class>com.zaraev.epam.javacourses.serlvlets.ServletCustomer</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>servletOrder</servlet-name>
        <servlet-class>com.zaraev.epam.javacourses.serlvlets.ServletOrder</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>servletProduct</servlet-name>
        <servlet-class>com.zaraev.epam.javacourses.serlvlets.ServletProduct</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>servletSupplier</servlet-name>
        <url-pattern>/supplier</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>servletCustomer</servlet-name>
        <url-pattern>/customer</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>servletOrder</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>servletProduct</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>

</web-app>